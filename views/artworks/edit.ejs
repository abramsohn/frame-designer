<main class="container h-100">
  <div class="row gx-5">
    <div class="col col-7 vh-75">
      <canvas id="designer" width="300" height="150"
        >Unfortunately your browser does not support canvas.</canvas
      >
    </div>
    <div class="col col-3 pt-md-5">
      <form action="/artworks/<%= artwork.id %>?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control .form-control-lg"
            value="<%= artwork.title %>"
          />
        </div>

        <fieldset class="input-group mb-3">
          <legend class="form-label">Image Size</legend>
          <input
            id="imageWidth"
            type="text"
            class="form-control"
            placeholder="width"
            aria-label="width"
            name="width"
            value="<%= artwork.width %>"
          />
          <span class="input-group-text">X</span>
          <input
            id="imageHeight"
            type="text"
            class="form-control"
            placeholder="height"
            aria-label="height"
            name="height"
            value="<%= artwork.height %>"
          />
        </fieldset>

        <div class="mb-3">
          <label for="borderRange" class="form-label">Borders</label>
          <div>
            <input
              id="borderRange"
              type="range"
              name="borders"
              class="form-control-range borders-range"
              value="<%= artwork.borders %>"
              min="0"
              max="99"
              oninput="this.nextElementSibling.value = this.value"
            />

            <output id="bubble" class="bubble" for="borders"
              ><%= (artwork.borders / artwork.resolution).toFixed(2) %>"</output
            >
            </div>
        </div>

        <div class="mb-3">
          <select id="frameMolding" name="frameMolding" class="form-select">
            <option value="0" <% if (artwork.frameMolding == 0) { %>selected<% } %> >Choose A Frame</option>
            <option value="0.25" <% if (artwork.frameMolding == 0.25) { %>selected<% } %> >1/4" Face</option>
            <option value="0.5" <% if (artwork.frameMolding == 0.5) { %> selected<% } %>>1/2" Face</option>
            <option value="1" <% if (artwork.frameMolding == 1) { %> selected<% } %> >1" Face</option>
          </select>
        </div>
         
        <input
            id="resolution"
            name="resolution"
            type="hidden"
            value="<%= artwork.resolution %>"
          />
        <input
          type="Submit"
          value="Update Design"
          class="form-control .form-control-lg"
        />
      </form>
    </div>
  </div>
</main>
<script src="/js/designer.js" defer></script>
